@model TuitionMedia_Management.Models.Qualification
@{
    ViewBag.Title = "Create";
}
<div class="row">
    <div class="col-12">
        <div class="Placeholder"></div>
    </div>
    <div class="col-12">
        @using (Ajax.BeginForm("Create", "Qualifications", new AjaxOptions
        {
            HttpMethod = "Post",
            UpdateTargetId = "Placeholder",
            InsertionMode = InsertionMode.Replace,
            OnSuccess = "onSUccess"
        }, new { id = "frm2" }))
        {
            <div class="form-group row mb-2">
                <label class="col-form-label col-2">Tutor</label>
                <div class="col-4">
                    @Html.DropDownListFor(x => x.Tutorid, new SelectList(ViewBag.Tutors, "Tutorid ", "Tutorname "), "Select One", new { @class = "form-select" })
                    @Html.ValidationMessageFor(x => x.Tutorid, "", new { @class = "Text-danger" })
                </div>
            </div>
            <div class="form-group row mb-2">
                <label class="col-form-label col-2">Degree</label>
                <div class="col-4">
                    @Html.TextBoxFor(x => x.Degree, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.Degree, "", new { @class = "Text-danger" })
                </div>
            </div>
            <div class="form-group row mb-2">
                <label class="col-form-label col-2">Passing year</label>
                <div class="col-4">
                    @Html.TextBoxFor(x => x.PassingYear, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.PassingYear, "", new { @class = "text-danger" })
                </div>
             </div>
                <div class="form-group row mb-2">
                    <label class="col-form-label col-2">Result</label>
                    <div class="col-4">
                        @Html.TextBoxFor(x => x.Result, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.Result, "", new { @class = "text-danger" })
                    </div>
                </div>
            
                <div class="form-group row mb-2">
                    <label class="col-form-label col-2">University/Institute</label>
                    <div class="col-4">
                        @Html.TextBoxFor(x => x.Institute, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.Institute, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group row mb-2">
                    <div class="col-4 offset-2">
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                </div>
                }
            </div>
    <div class="col-12">
        @Html.ActionLink("Back to list", "Index")
    </div>
</div>
@section styles{
    <link href="~/Content/bootstrap-datepicker.standalone.css" rel="stylesheet" />
}
@section scripts{
    <script src="~/Scripts/jquery-3.6.3.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <script src="~/Scripts/bootstrap-datepicker.js"></script>
    <script>
        $(".date").datepicker({
            format: "yyyy-mm-dd"
        });
        function onSUccess() {
            $("#frm2").trigger('reset')
        }
    </script>
}
